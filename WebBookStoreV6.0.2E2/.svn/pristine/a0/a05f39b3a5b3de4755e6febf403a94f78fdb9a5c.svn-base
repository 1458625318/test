@CHARSET "UTF-8";

.clear {
	position: static;
	display: block;
	float: none;
	width: 1px;
	height: 1px;
	clear: both;
}

.hidden {
	visibility: hidden;
}

.unit {
	display: block;
	position: static;
	float: left;
}

.unit.r {
	float: right;
}

.unit>.label {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 28px;
	line-height: 30px;
	font-size: 12px;
	font-weight: bold;
}

.unit>.field {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 28px;
	line-height: 30px;
	text-align: left;
	font-size: 14px;
	font-weight: normal;
}

.unit>.field>input[type=text] {
	position: static;
	display: block;
	width: 120px;
	height: 22px;
	line-height: 25px;
	padding-left: 2px;
	font-size: 12px;
	font-weight: normal;
	border: 1px solid #CCCCCC;
}

.unit>.text {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 28px;
	line-height: 30px;
	text-align: left;
	font-size: 12px;
	font-weight: normal;
}

.unit>.value {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 28px;
	line-height: 30px;
	text-align: left;
	font-size: 12px;
	font-weight: normal;
}

.unit>button.action {
	cursor: pointer;
	position: static;
	display: block;
	float: left;
	margin-top: 2px;
	height: 25px;
	line-height: 22px;
	font-size: 12px;
	font-weight: normal;
	border: 1px solid #000000;
}
.unit+.unit{
	margin-left: 5px;
}

.item {
	display: block;
	position: static;
	float: left;
	color: #000000;
	border: 0px solid #000000;
}

.item>.label {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 20px;
	line-height: 25px;
	font-size: 12px;
	font-weight: bold;
}

.item>.value {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 20px;
	line-height: 25px;
	text-align: left;
	font-size: 12px;
	font-weight: normal;
}

.item>.link {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 20px;
	line-height: 25px;
	text-align: left;
	font-size: 12px;
	font-weight: normal;
	text-decoration: none;
}

.item+.item {
	margin-left: 10px;
}

span.item {
	line-height: 25px;
}

a.item {
	text-decoration: none;
}

a.item:HOVER {
	color: red;
}

.panel {
	display: block;
	margin: 0px;
	padding: 0px;
}

.row {
	position: static;
	display: block;
	padding: 2px;
	clear: both;
	border: 0px solid #000000;
}

.row>.label {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 20px;
	line-height: 25px;
	text-align: right;
	font-size: 12px;
	font-weight: bold;
}

.row>.editable {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 20px;
	line-height: 25px;
	text-align: left;
	font-size: 12px;
	font-weight: normal;
}

.row>.editable+.editable {
	margin-left: 12px;
}

.row>.readonly {
	position: static;
	display: block;
	float: left;
	padding: 2px;
	height: 20px;
	line-height: 25px;
	text-align: left;
	font-size: 12px;
	font-weight: normal;
}

.row>.readonly+.readonly {
	margin-left: 12px;
}

.row>.readonly+.editable {
	margin-left: 12px;
}

.row>.editable+.readonly {
	margin-left: 12px;
}

.row.message {
	position: static;
	display: block;
	line-height: 25px;
	margin-top: 5px;
	margin-bottom: 5px;
	padding: 5px;
	color: red;
	font-size: 12px;
	font-weight: normal;
	clear: both;
	background-color: yellow;
	border: 1px dotted #000000;
}

form {
	margin: 0px;
	padding: 0px;
}

form .message {
	position: static;
	display: block;
	clear: both;
	line-height: 16px;
	margin-top: 5px;
	margin-bottom: 5px;
	padding: 5px;
	background-color: yellow;
	color: red;
	font-size: 12px;
	font-weight: normal;
	border: 1px dotted #000000;
}